<div class="">
  <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Edit <%= resource_name.to_s.humanize %></h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="space-y-1">
      <%= f.label :name, class: "block mb-2 text-sm font-medium text-white" %>
      <%= f.email_field :name, 
            autofocus: true, 
            autocomplete: "name",
            class: "border text-sm rounded-lg block w-full p-2.5 bg-neutral-700 border-neutral-600 placeholder-neutral-400 text-white" %>
    </div>

    <div class="space-y-1">
      <%= f.label :username, class: "block mb-2 text-sm font-medium text-white" %>
      <%= f.email_field :username, 
            autofocus: true, 
            autocomplete: "username",
            class: "border text-sm rounded-lg block w-full p-2.5 bg-neutral-700 border-neutral-600 placeholder-neutral-400 text-white" %>
    </div>

    <div class="space-y-1">
      <%= f.label :email, class: "block mb-2 text-sm font-medium text-white" %>
      <%= f.email_field :email, 
            autofocus: true, 
            autocomplete: "email",
            class: "border text-sm rounded-lg block w-full p-2.5 bg-neutral-700 border-neutral-600 placeholder-neutral-400 text-white" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
        <p class="text-sm text-yellow-800">
          Currently waiting confirmation for: <span class="font-medium"><%= resource.unconfirmed_email %></span>
        </p>
      </div>
    <% end %>

    <div class="space-y-1">
      <%= f.label :password, class: "block mb-2 text-sm font-medium text-white" %>
      <p class="text-xs text-gray-500 mb-1">(leave blank if you don't want to change it)</p>
      <%= f.password_field :password, 
            autocomplete: "new-password",
            class: "border text-sm rounded-lg block w-full p-2.5 bg-neutral-700 border-neutral-600 placeholder-neutral-400 text-white" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 mt-1">
          <em><%= @minimum_password_length %> characters minimum</em>
        </p>
      <% end %>
    </div>

    <div class="space-y-1">
      <%= f.label :password_confirmation, class: "block mb-2 text-sm font-medium text-white" %>
      <%= f.password_field :password_confirmation, 
            autocomplete: "new-password",
            class: "border text-sm rounded-lg block w-full p-2.5 bg-neutral-700 border-neutral-600 placeholder-neutral-400 text-white" %>
    </div>

    <div class="space-y-1">
      <%= f.label :current_password, class: "block mb-2 text-sm font-medium text-white" %>
      <p class="text-xs text-gray-500 mb-1">(we need your current password to confirm your changes)</p>
      <%= f.password_field :current_password, 
            autocomplete: "current-password",
            class: "border text-sm rounded-lg block w-full p-2.5 bg-neutral-700 border-neutral-600 placeholder-neutral-400 text-white" %>
    </div>

    <div class="pt-4">
      <%= f.submit "Update", 
            class: "bg-amber-600 text-white px-4 py-2 rounded-lg cursor-pointer hover:bg-amber-700 disabled:opacity-50 disabled:cursor-not-allowed" %>
    </div>
  <% end %>

  <div class="mt-4 border-t border-gray-200">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Cancel my account</h3>
    <div class="bg-red-300 border border-red-200 rounded-md p-4">
      <p class="text-sm text-red-700 mb-3">Unhappy with your account?</p>
      <%= button_to "Cancel my account", 
            registration_path(resource_name), 
            data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, 
            method: :delete,
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out" %>
    </div>
  </div>

  <div class="mt-6 text-center">
    <%= link_to "Back", :back, 
          class: "text-sm text-amber-600 hover:text-amber-700 font-medium" %>
  </div>
</div>
