<aside id="right-sidebar" class="fixed top-0 right-0 z-40 w-96 h-screen border-l border-neutral-700 flex justify-center items-start py-10">
  <div class="w-72 font-sans">
    <div class="text-center">
      <% if current_user.profile_image.attached? %>
        <%= image_tag current_user.profile_image.variant(resize_to_fill: [40, 40]).processed, class: "w-24 h-24 rounded-full mx-auto mb-4 shadow" %>
      <% else %>
        <%= image_tag "default_avatar.jpg", class: "w-24 h-24 rounded-full mx-auto mb-4 shadow" %>
      <% end %>

      <h2 class="text-xl font-bold text-white"><%= current_user.name %></h2>
      <p class="text-sm text-neutral-400 mb-3">@<%= current_user.username%></p>

      <p class="text-sm text-neutral-400 mb-6">
        <%= current_user.bio %>
      </p>

      <div class="flex justify-around text-sm text-neutral-600 border-t border-gray-200 pt-4">
        <div class="hover:text-gray-900 cursor-pointer">
          <span class="block font-bold text-neutral-900">120</span>
          <span>Posts</span>
        </div>
        <div class="hover:text-gray-900 cursor-pointer">
          <span class="block font-bold text-neutral-900">450</span>
          <span>Following</span>
        </div>
        <div class="hover:text-gray-900 cursor-pointer">
          <span class="block font-bold text-neutral-900">600</span>
          <span>Followers</span>
        </div>
      </div>
    </div>
  </div>
</aside>
