<aside id="left-sidebar" class="fixed top-0 left-0 z-40 w-96 h-screen border-r border-neutral-700">
    <div class="overflow-y-auto py-5 px-3 h-full border-r border-neutral-700">
      <ul class="space-y-2">
        <%= link_to posts_path, class: "group inline-block p-2 rounded-lg hover:bg-neutral-700" do %>
          <%= image_tag "logo.png", class: "w-17.5 h-auto block" %>
        <% end %>
        <li>
          <%= link_to posts_path, class: "flex items-center p-2 text-base font-normal rounded-lg text-white hover:bg-neutral-700 group" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 transition duration-75 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/></svg>
            <span class="ml-3">Home</span>
          <% end %>
        </li>
      </ul>
    </div>
    <div class="absolute bottom-0 px-3 pb-4 w-full z-20 border-r border-neutral-700" data-controller="dropdown">
      <button type="button" class="flex items-center p-2 w-full text-base font-normal rounded-lg text-white hover:bg-neutral-700 group" data-action="click->dropdown#toggle">
        <% if current_user.profile_image.attached? %>
          <%= image_tag current_user.profile_image.variant(resize_to_fill: [40, 40]).processed, class: "w-6 h-6 transition duration-75 text-neutral-400 group-hover:text-white" %>
        <% else %>
          <%= image_tag "default_avatar.jpg", class: "w-6 h-6 transition duration-75 text-neutral-400 group-hover:text-white" %>
        <% end %>
        <span class="flex-1 ml-3 text-left whitespace-nowrap"><%= current_user.name %></span>
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
      </button>

      <!-- Dropdown -->
      <div class="hidden absolute bottom-full w-full px-2 py-2 left-0 mb-2 z-50 text-base list-non rounded divide-y divide-neutral-100 shadow bg-neutral-700" data-dropdown-target="menu" >
        <ul class="space-y-2">
          <li>
            <%= link_to "Profile", profile_path(current_user), class: "w-full p-1 rounded-lg block text-sm text-left hover:text-white text-neutral-300 hover:bg-neutral-600" %>
          </li>
          <li>
            <%= link_to "Settings", edit_user_registration_path, class: "w-full p-1 rounded-lg block text-sm text-left hover:text-white text-neutral-300 hover:bg-neutral-600" %>
          </li>
          <li>
            <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "w-full p-1 rounded-lg block text-sm text-left hover:text-white text-neutral-300 hover:bg-neutral-600" %>
          </li>
        </ul>
      </div>
    </div>
</aside>